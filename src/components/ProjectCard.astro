---
interface Props {
    icon: string;
    developer: string;
    title: string;
    description: string;
    href: string;
}

const { icon, developer, title, description, href } = Astro.props;
---

<li class="project-card">
    <a href={ href }>
        <img class="icon" src={ icon }>
        <h4 class="developer">{ developer }</h4>
        <h2>{ title }</h2>
        <p>
            { description }
        </p>
    </a>
</li>

<style>
    .project-card {
        display: block;
        list-style: none;
        padding: 10px;
        line-height: 0.8rem;
        transition: ease-in 150ms;
        -webkit-tap-highlight-color: rgba(48, 46, 48, .5);
        min-width: 150px;
        min-height: fit-content;
        border: 1px solid rgb(78, 78, 78);
        background: rgb(48, 46, 48);
        border-radius: 10px;
        margin: 3px;
    }

    .project-card:hover {
        border-color: gray;
        background: rgb(37, 36, 37);
    }

    .project-card > a {
        transition: none;
        color: white;
        text-decoration: none;
    }

    .project-card h2 {
        display: flex;
        flex-wrap: wrap;
        line-height: 1.2em;
    }

    .icon {
        width: 32px;
        height: 32px;
        border-radius: 50%;
    }

    .developer {
        margin-top: 12px;
    }

    p {
        font-size: 14px;
        font-weight: normal;
        line-height: 1.4rem;
    }
</style>