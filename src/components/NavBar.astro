---
import "../styles/global.css";

var options = {
    Home: "Home", 
    About: "About Me",
    Projects: "Projects"
};
---

<script>
    console.log(Astro.currentLocale);
</script>

<header>
    <div class="nav-left">
        <a rel="author" href="https://github.com/retrozinndev">
        <img src="https://github.com/retrozinndev.png" alt="Me">
        </a>
    </div>
    <nav class="navbar">
        <ul class="links">
            <li class="link">
                <a href="/#top" target="_self">{ options.Home }</a>
            </li>
            <li class="link">
                <a href="/#chars" target="_self">{ options.About }</a>
            </li>
            <li class="link">
                <a href="/projects" target="_self">{ options.Projects }</a>
            </li>
        </ul>
    </nav>
</header>

<style>
    :root {
        --avatar-size: 32px;
        --avatar-margin-left: 16px;
    }

    header {
        display: flex;
        flex-direction: row;
        background-color: var(--navbar-color);
    }

    .navbar {
        display: flex;
        font-size: medium;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: auto;
    }

    .nav-left {
        float: left;
        display: flex;
        position: relative;
    }

    .nav-left > a > img {
        border-radius: 16px;
        width: var(--avatar-size);
        height: var(--avatar-size);
        margin-top: 9px;
        margin-left: var(--avatar-margin-left);
    }

    .links {
        display: flex;
        width: fit-content;
        list-style-type: none;
        overflow: hidden;
        text-align: center;
        margin-right: calc(var(--avatar-size) + var(--avatar-margin-left));
    }

    .link {
        display: list-item;
        margin-inline: 8px;
        margin-top: 0;
    }

    .link > a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        transition: 250ms;
    }

    .link > a:hover {
        color: var(--link-color);
    }
</style>